<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://www.gueei.com/android-binding/"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bkBlue"
    android:orientation="vertical" >

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="40dp" >

            <binding.BindableFrameLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                binding:dataSource="batLevVM"
                binding:layoutId="@layout/top_bat_lev_view" />

            <View
                android:layout_width="@dimen/top_space"
                android:layout_height="match_parent" />
            
            <binding.BindableFrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                binding:dataSource="topCh50VM"
                binding:layoutId="@layout/top_ch50_view" />

            <View
                android:layout_width="@dimen/top_space"
                android:layout_height="match_parent" />
            
            <binding.BindableFrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                binding:dataSource="topFSendVM"
                binding:layoutId="@layout/top_f_send_view" />

            <View
                android:layout_width="@dimen/top_space"
                android:layout_height="match_parent" />
            
            <binding.BindableFrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                binding:dataSource="topDlySendVM"
                binding:layoutId="@layout/top_dly_send_view" />

            <View
                android:layout_width="@dimen/top_space"
                android:layout_height="match_parent" />

            <binding.BindableFrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                binding:dataSource="topFRecVM"
                binding:layoutId="@layout/top_f_rec_view" />

            <View
                android:layout_width="@dimen/top_space"
                android:layout_height="match_parent" />
            
            <binding.BindableFrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                binding:dataSource="topDlyRecVM"
                binding:layoutId="@layout/top_dly_rec_view" />

            <View
                android:layout_width="@dimen/top_space"
                android:layout_height="match_parent" />
            
            
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight="1" >

        <my.app.myvi.Oscilloscope
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="400dp"
                android:orientation="vertical" >

                <binding.BindableFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    binding:dataSource="startBtnVM"
                    binding:layoutId="@layout/btn_start_view" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />

                <binding.BindableFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    binding:dataSource="dmeBtnVM"
                    binding:layoutId="@layout/btn_dme_view" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />

                <binding.BindableFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    binding:dataSource="antBtnVM"
                    binding:layoutId="@layout/btn_ant_view" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />

                <binding.BindableFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    binding:dataSource="lvlBtnVM"
                    binding:layoutId="@layout/btn_lvl_view" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />

                <binding.BindableFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    binding:dataSource="hipBtnVM"
                    binding:layoutId="@layout/btn_hip_view" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="40dp" >

            <binding.BindableFrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                binding:dataSource="botResyVM"
                binding:layoutId="@layout/bot_resy_view" />

            <View
                android:layout_width="@dimen/top_space"
                android:layout_height="match_parent" />
            
            <binding.BindableFrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                binding:dataSource="botResxVM"
                binding:layoutId="@layout/bot_resx_view" />

            <View
                android:layout_width="@dimen/top_space"
                android:layout_height="match_parent" />

            <binding.BindableFrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                binding:dataSource="botReqLevVM"
                binding:layoutId="@layout/bot_req_lev_view" />

            <View
                android:layout_width="@dimen/top_space"
                android:layout_height="match_parent" />

            <binding.BindableFrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                binding:dataSource="botRspLevVM"
                binding:layoutId="@layout/bot_rsp_lev_view" />

            <View
                android:layout_width="@dimen/top_space"
                android:layout_height="match_parent" />

            <binding.BindableFrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                binding:dataSource="botKsvnVM"
                binding:layoutId="@layout/bot_ksvn_view" />

            <View
                android:layout_width="@dimen/top_space"
                android:layout_height="match_parent" />

            <binding.BindableFrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                binding:dataSource="botReqFzaprVM"
                binding:layoutId="@layout/bot_req_fzapr_view" />

            <View
                android:layout_width="@dimen/top_space"
                android:layout_height="match_parent" />

            <binding.BindableFrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                binding:dataSource="botReqFotvVM"
                binding:layoutId="@layout/bot_req_fotv_view" />

            <View
                android:layout_width="@dimen/top_space"
                android:layout_height="match_parent" />
            
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>