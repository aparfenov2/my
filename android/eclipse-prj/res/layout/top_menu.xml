<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://www.gueei.com/android-binding/"
    xmlns:app="http://schemas.android.com/apk/res/my.app.myvi"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="match_parent" >

        <my.app.myvi.BatteryMeter
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <View
        android:layout_width="@dimen/top_space"
        android:layout_height="match_parent" />

    <my.app.myvi.DoubleLabel
        style="@style/label_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:botText="50X"
        app:topText="КАНАЛ" />

    <View
        android:layout_width="@dimen/top_space"
        android:layout_height="match_parent" />

    <my.app.myvi.DoubleLabel
        style="@style/label_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:botText="1074 МГЦ"
        app:topText="F ПРД" />

    <View
        android:layout_width="@dimen/top_space"
        android:layout_height="match_parent" />

    <my.app.myvi.DoubleLabel
        style="@style/label_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:botText="12 МКС"
        app:topStyle="@style/lctxgs"
        app:topText="GG" />

    <View
        android:layout_width="@dimen/top_space"
        android:layout_height="match_parent" />

    <my.app.myvi.DoubleLabel
        style="@style/label_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:botText="1011 МГЦ"
        app:topText="F ПРМ" />

    <View
        android:layout_width="@dimen/top_space"
        android:layout_height="match_parent" />

    <my.app.myvi.DoubleLabel
        style="@style/label_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:botText="13 МКС"
        app:topStyle="@style/lctxgs"
        app:topText="GG" />


</LinearLayout>